{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es2017" ],
    "target": "es5",
    "outDir": "./build",
    "noImplicitAny": true,
    "removeComments": true,
    "pretty": true,
    "moduleResolution": "node",
    "declaration": true,
  },
  "include": [
    "lib/**/*.ts",
  ],
  "exclude": [
    "**node_modules**",
    "**/*.spec.ts"
  ]
}
